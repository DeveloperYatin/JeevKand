<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SamudishtActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:text="@string/समुदिष्ट"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:text="@string/output"
        android:maxLines="4"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/input1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:textSize="@dimen/_16ssp"
        android:spinnerMode="dropdown"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintRight_toLeftOf="@id/input2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/input2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:textSize="@dimen/_16ssp"
        android:spinnerMode="dropdown"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/input1"
        app:layout_constraintRight_toLeftOf="@id/input3"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/input3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:textSize="@dimen/_16ssp"
        android:spinnerMode="dropdown"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/input2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--<Spinner
        android:id="@+id/input4"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:textSize="@dimen/_16ssp"
        android:spinnerMode="dropdown"
        android:prompt="@string/निद्रा"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input4"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/निद्रा"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="#ededed"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10sp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidthFocused="2dp"
        app:endIconMode="dropdown_menu"
        app:hintEnabled="true"
        android:clickable="false"
        android:enabled="false"
        app:hintTextAppearance="@style/HintText"
        app:hintTextColor="@color/black"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <AutoCompleteTextView
            android:id="@+id/input4Selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:singleLine="true"
            android:clickable="false"
            android:enabled="false"
            android:textSize="@dimen/_13ssp"
            android:paddingLeft="@dimen/_20sdp"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/स्नेह"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="#ededed"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        android:enabled="false"
        app:boxCornerRadiusTopStart="10sp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidthFocused="2dp"
        app:endIconMode="dropdown_menu"
        app:hintEnabled="true"
        android:clickable="false"
        app:hintTextAppearance="@style/HintText"
        app:hintTextColor="@color/black"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <AutoCompleteTextView
            android:id="@+id/input5Selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:enabled="false"
            android:singleLine="true"
            android:clickable="false"
            android:textSize="@dimen/_13ssp"
            android:paddingLeft="@dimen/_20sdp"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>